<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.App.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="MyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAppPrimary</item>
        <item name="colorPrimaryDark">@color/colorAppPrimaryDark</item>
        <item name="colorAccent">@color/colorAppPrimaryLight</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textViewStyle">@style/Widget.TextView</item>
        <item name="editTextStyle">@style/Widget.EditText</item>
        <item name="buttonStyle">@style/Widget.Button</item>
        <item name="android:buttonStyle">@style/Widget.Button</item>
        <item name="materialButtonStyle">@style/Widget.Button</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="materialCardViewStyle">@style/Widget.CardView</item>
        <item name="snackbarStyle">@style/Widget.SnackBar</item>
        <item name="bottomNavigationStyle">@style/Widget.BottomNavigation</item>
        <item name="floatingActionButtonStyle">@style/Widget.FloatingActionButton</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
        <item name="spinnerStyle">@style/Widget.App.Spinner</item>
        <item name="android:spinnerStyle">@style/Widget.App.Spinner</item>

    </style>

    <style name="MediaPickerTheme" parent="Theme.Material3.Dark">
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="actionMenuTextColor">@color/picker_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:divider">@android:color/white</item>
    </style>


    <!-- styling -->
    <style name="Widget" />

    <style name="Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">3dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">3dp</item>
    </style>

    <style name="Widget.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:elevation">5dp</item>
        <item name="elevation">5dp</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:elevation">5dp</item>
        <item name="elevation">5dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Widget.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Widget.EditText.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="Widget.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minWidth">192dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="backgroundTint">@color/colorAppPrimary</item>
    </style>

    <style name="Widget.Button.AppCompat" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/ic_btn_bg</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minWidth">178dp</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.TextView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Widget.TextView.Headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="Widget.TextView.Headline.Bold">
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Subhead">
        <item name="android:textSize">@dimen/text_size_subhead</item>
    </style>

    <style name="Widget.TextView.Subhead.Bold">
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Large">
        <item name="fontFamily">@font/source_sans_pro_light</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Widget.TextView.Large.Bold">
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Large.SemiBold">
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Medium">
        <item name="fontFamily">@font/source_sans_pro_light</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Widget.TextView.Medium.Bold">
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Medium.SemiBold">
        <item name="fontFamily">@font/source_sans_pro_semi_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Small">
        <item name="fontFamily">@font/source_sans_pro_light</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Widget.TextView.Small.Bold">
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Small.SemiBold">
        <item name="fontFamily">@font/source_sans_pro_semi_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Smallest">
        <item name="fontFamily">@font/source_sans_pro_light</item>
        <item name="android:textSize">@dimen/text_size_smallest</item>
    </style>

    <style name="Widget.TextView.Smallest.Bold">
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Heading">
        <item name="fontFamily">@font/source_sans_pro_light</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Widget.TextView.Heading.Bold">
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">5dp</item>
        <item name="boxStrokeColor">@color/colorOutlineBorder</item>
        <item name="hintTextColor">@color/colorOutlineBorder</item>
    </style>


    <style name="Widget.TextInputLayout.Headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="Widget.TextInputLayout.Headline.Bold">
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextInputLayout.Subhead">
        <item name="android:textSize">@dimen/text_size_subhead</item>
    </style>

    <style name="Widget.TextInputLayout.Subhead.Bold">
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextInputLayout.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Widget.TextInputLayout.Large.Bold">
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextInputLayout.Medium">
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Widget.TextInputLayout.Medium.Bold">
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.SnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.SnackBar</item>
    </style>

    <style name="ThemeOverlay.App.SnackBar" parent="">
        <!--        <item name="colorOnSurface">@color/colorAppPrimaryLight</item>-->
        <item name="colorOnSurface">@color/colorBlack</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Widget.BottomNavigation" parent="@style/Widget.Design.BottomNavigationView">
        <item name="backgroundTint">@color/colorTabBg</item>
        <item name="itemBackground">@drawable/ic_selector_tab_item</item>
    </style>

    <style name="Widget.BottomNavigation.TextAppearance" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
    </style>

    <style name="Widget.BottomNavigation.TextAppearance.Inactive">
        <item name="android:textColor">@color/colorAccentLight</item>
    </style>

    <style name="Widget.BottomNavigation.TextAppearance.Active">
        <item name="android:textColor">@color/colorAppPrimaryLight</item>
    </style>

    <!--<style name="Widget.Otp" parent="@style/OtpWidget.OtpView">
        <item name="lineColor">#CCCCCC</item>
        <item name="lineSpacing">40dp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>-->

    <style name="Widget.Switch">
        <item name="colorControlActivated">@color/colorAppPrimaryLight</item>
    </style>

    <style name="Widget.Tab.TextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/source_sans_pro_semi_bold</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert" />

    <style name="Dialog.Alert">
        <item name="colorPrimary">@color/colorAppPrimaryLight</item>
    </style>

    <style name="Widget.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Widget.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.Widget.FloatingActionButton" parent="">
        <item name="colorSecondary">@color/colorAppPrimaryLight</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
    </style>

    <style name="BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">
            @style/Animation.MaterialComponents.BottomSheetDialog
        </item>
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
    </style>


    <style name="ImageViewStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="AppTheme.Toolbar" parent="MyTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Toolbar.TitleText.Color">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Base_Toolbar_Style">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@color/colorAppPrimary</item>
        <item name="android:theme">@style/Base_ToolbarTheme</item>
        <!--        <item name="titleMarginStart">@dimen/margin_large</item>-->
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/CustomSubTitleTextAppearance</item>
    </style>

    <style name="Base_ToolbarTheme">
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">@color/colorGreyMedium</item>
    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomSubTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/source_sans_pro_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Widget.App.Spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="android:background">@drawable/spinner_drop_down_style</item>
    </style>


</resources>